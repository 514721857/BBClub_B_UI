<?xml version="1.0" encoding="utf-8"?>

<com.bbc.bbclub.b.util.AutoCardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/view_margin_15"
    android:layout_marginRight="@dimen/view_margin_15"
    android:layout_gravity="center"

    android:foreground="?android:attr/selectableItemBackground"


    card_view:cardUseCompatPadding="true">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_margin_15"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="三月"
            android:textColor="@color/account_month_grey"
            android:textSize="@dimen/view_margin_60" />

        <TextView
            android:id="@+id/times_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_margin_15"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="33次"
            android:textColor="@color/account_time_text"
            android:textSize="@dimen/text_button_30" />

    </com.zhy.autolayout.AutoRelativeLayout>

</com.bbc.bbclub.b.util.AutoCardView>