<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_button_90"
    android:orientation="vertical" >

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/view_button_90"
        android:background="@color/colorPrimary" >

        <ImageView
            android:id="@+id/top_view_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/img_select"
            android:layout_margin="@dimen/view_margin_15"
            android:padding="5px"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/top_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/login_verify_text"
            android:textSize="@dimen/text_text_35" />





        <ImageView
            android:id="@+id/image_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/view_margin_15"
            android:padding="5px"

            android:background="@drawable/img_select"
            android:gravity="center_vertical"
            android:visibility="gone"

            android:src="@mipmap/main_person"

            />

        <TextView

            android:id="@+id/top_view_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/view_margin_15"
            android:padding="5px"
            android:visibility="gone"
            android:textColor="@color/login_verify_text"
            android:background="@drawable/img_select"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_text_35"
            android:text="全选"
            />

    </com.zhy.autolayout.AutoFrameLayout>

</com.zhy.autolayout.AutoLinearLayout>